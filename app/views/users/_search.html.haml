= form_tag search_users_path, :method => 'get', class: "form-inline" do
      = text_field_tag "query", params[:query], placeholder: "Search"
      = select_tag "category_id", options_for_select([["Choose a Genre", ""]] + Category.all.collect {|x| [x.name, x.id]}, params[:category_id]), class: "input-medium"
      = text_field_tag "price_min", params[:price_min], placeholder: "Price Min", class: "input-small"
      = text_field_tag "price_max", params[:price_max], placeholder: "Price Max", class: "input-small"
      = text_field_tag "address", params[:address], placeholder: "Near to", class: "address-picker-input"
      = submit_tag "Search", :name => nil