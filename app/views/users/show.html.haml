= render 'modals/contact'
.row
  .span3{style: "text-align: center;"}
    .picture{style: "position: relative; top: -5px; left: 2px"}= image_tag profpic(@user), class: "img-rounded"
  .span5{style: "position: relative; top: -5px"}
    %h1= @user.display_name
    %em{style: "position: relative; top: -5px; left: 3px"}= "#{@user.category.name rescue nil} / #{@user.subcategory}"
    %br
    - if @user.score != nil
      %em{style: "position:relative; left: 2px; top: 5px"}="rating: #{@user.score}/10"
  - if user_signed_in?
    - if can? :update, @user
      .span4.pull-right{style: "text-align: right"}
        = link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-info btn-large", style: "position: relative; top: 15px"
    - else
      %a.btn.btn-success.btn-large{type: "button", data:{toggle: :modal, target: "#contact"}, style: "position: relative; top: 15px"} Book a Gig
.row
  .span12
    .well{style: "position: relative; top: 10px"}
      = @user.blurb
.row{style: "position: relative; top: 5px"}
  - if @user.category_id == 1
    .span4
      .well{style: "height: 350px; overflow: auto; text-align: center"}
        %h3.well-title Songs
        = render @user.songs.rank(:row_order)
    .span8
      .well{style: "height: 350px; overflow: auto; text-align: center"}
        %h3.well-title Videos
        = render @user.videos.rank(:row_order)
  - else
    .span12
      .well{style: "height: 350px; overflow: auto; text-align: center"}
        %h3.well-title Videos
        = render @user.videos.rank(:row_order)
.row
  .span12
    .well{style: "text-align: center; height: 260px; overflow: auto"}
      %h3.well-title Reviews
      .rowmodals
        .span8.offset2{style: "text-align: left"}
          #reviews
            = render @reviews
.row
  .span12
    .well
      %h3.well-title Updates
      #posts
        = render @posts
        
    - if can? :create, @user.posts.new
      = render 'posts/form'